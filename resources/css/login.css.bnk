/* ========== Poster Dark Gradient Background ========== */
:root {
  --c1:#ff512f;   /* orange-red */
  --c2:#dd2476;   /* pink-magenta */
  --c3:#7a5cff;   /* purple */
  --bg:#0f0f1a;   /* dark base */
}

/* base layout */
html,body {height:100%;margin:0}
body {font-family:system-ui, -apple-system, 'Inter', sans-serif; background:var(--bg);}

/* poster background */
.poster-bg {position:fixed; inset:0; overflow:hidden; z-index:-1}
.gradient {
  position:absolute; inset:0;
  background:linear-gradient(135deg,var(--c1),var(--c2) 40%,var(--c3) 100%);
}
.noise {
  position:absolute; inset:0; opacity:.07; mix-blend-mode:overlay;
  background-image:url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='200' height='200'><filter id='n'><feTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/></filter><rect width='200' height='200' filter='url(%23n)' opacity='0.5'/></svg>");
  background-size:200px 200px;
}

/* stars */
.star {
  position:absolute; width:6px; height:6px; border-radius:50%;
  background:radial-gradient(circle,#fff,transparent 70%);
  opacity:.9; animation:twinkle 5s infinite alternate;
}
.star.s1{left:20%; top:30%}
.star.s2{right:15%; top:25%}
@keyframes twinkle{from{opacity:.3} to{opacity:1}}

/* crosses */
.cross {
  position:absolute; width:18px; height:18px;
  background:transparent;
}
.cross:before,.cross:after{
  content:""; position:absolute; left:50%; top:50%; background:#fff;
  transform:translate(-50%,-50%);
}
.cross:before{width:2px;height:100%}
.cross:after{width:100%;height:2px}
.cross.c1{left:12%; top:60%; opacity:.4}
.cross.c2{right:18%; top:40%; opacity:.6}

/* decorative circles */
.circle {
  position:absolute; border-radius:50%; border:2px solid rgba(255,255,255,.2);
}
.circle.circ1{width:140px;height:140px;left:8%;top:12%}
.circle.circ2{width:200px;height:200px;right:10%;bottom:14%}

/* ========== Login Card ========== */
/* ========== การ์ดล็อกอิน (เน้นกรอบสีขาว) ========== */
:root{
  --card:#ffffff;
  --text:#1f2937;
  --muted:#6b7280;
  --placeholder:#9ca3af;
  --border:#e5e7eb;

  --primaryA:#ff512f; /* ปุ่ม ไล่สีแดงส้ม → ชมพู */
  --primaryB:#dd2476;

  --r-xl:24px;
  --shadow-lg:0 28px 100px rgba(0,0,0,.18);
  --shadow-md:0 16px 50px rgba(0,0,0,.12);
}

*{box-sizing:border-box}
html,body{height:100%}
body{
  margin:0;
  font-family: system-ui, -apple-system, "Kanit", Inter, Segoe UI, Roboto, Arial, sans-serif;
  color:var(--text);
}

/* ตัวการ์ดสองคอลัมน์ */
.login-card{
  width:min(1180px,96vw);
  display:grid;grid-template-columns:1.1fr 1fr;
  background:var(--card);border-radius:var(--r-xl);overflow:hidden;
  box-shadow:var(--shadow-lg);border:1px solid rgba(255,255,255,.28)
}

/* ฝั่งซ้าย */
.hero-pane{
  display:flex;
  align-items:center;
  justify-content:center;
  background:linear-gradient(160deg, rgba(255,255,255,0.15), rgba(255,255,255,0));
  border-radius:20px 0 0 20px;
}

.hero-inner{padding:56px 48px;min-height:360px;display:flex;flex-direction:column;justify-content:center}
.hero-badges{list-style:none;padding:0;margin:0;display:flex;gap:12px}
.hero-badges li{width:46px;height:46px;border-radius:14px;background:rgba(255,255,255,.18);display:grid;place-items:center;font-size:22px;backdrop-filter:blur(2px);box-shadow:inset 0 1px 0 rgba(255,255,255,.22),0 10px 22px rgba(0,0,0,.10)}
.mascot-slot{width:180px;height:120px;border-radius:16px;background:rgba(255,255,255,.22);display:grid;place-items:center;font-weight:800;letter-spacing:.3px}

/* ฝั่งขวา (ฟอร์ม) */
.form-pane{
  padding: 40px 32px;
}
.form-pane .form-row{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin: 12px 0 20px;
  font-size: .95rem;
}
.form-pane .remember{
  display:flex;
  align-items:center;
  gap:6px;
}
.form-pane .btn-primary{
  width:100%;
  background:linear-gradient(90deg,#f97316,#ec4899,#8b5cf6);
  border-radius:999px;
  font-weight:600;
  padding:12px 0;
  box-shadow:0 4px 14px rgba(0,0,0,.15);
}

.brand{display:flex;flex-direction:column;align-items:center;gap:6px;margin-bottom:6px}
.logo-slot{width:80px;height:80px;border-radius:50%;background:rgba(16,24,40,.08);display:grid;place-items:center;font-weight:800;color:#334155}
.brand-sub{color:var(--muted);font-size:.95rem}
.form-title{text-align:center;color:#b91c1c;font-weight:900;margin:10px 0 18px;font-size:26px}

/* แจ้งเตือน */
.alert{border-radius:14px;padding:10px 12px;margin-bottom:12px;font-weight:600}
.alert.error{background:#fee2e2;border:1px solid #fecaca;color:#991b1b}

/* ฟอร์ม/อินพุต */
.login-form{display:grid;gap:14px}
.field{display:grid;gap:6px}
.field>span{color:var(--muted);font-size:.92rem}
.input{
  width:100%;padding:12px 14px;border:1px solid var(--border);border-radius:12px;
  background:#fff;color:var(--text);font-size:15px;transition:border-color .2s, box-shadow .2s
}
.input::placeholder{color:var(--placeholder)}
.input:focus{outline:none;border-color:#ff6a00;box-shadow:0 0 0 3px rgba(255,106,0,.15)}

/* toggle password */
.pass-wrap{position:relative}
.eye{
  position:absolute;right:8px;top:50%;transform:translateY(-50%);
  width:38px;height:38px;border:0;border-radius:10px;background:#f1f5ff;cursor:pointer;box-shadow:var(--shadow-md);color:#334155
}

/* จำการเข้าสู่ระบบ */
.remember{display:flex;gap:8px;align-items:center;color:var(--muted);margin-top:2px}
.remember input{accent-color:#ff6a00}

/* ปุ่ม */
.btn-primary{
  margin-top:6px;width:100%;display:flex;gap:10px;align-items:center;justify-content:center;
  border:0;border-radius:12px;padding:12px 16px;
  background:linear-gradient(90deg,var(--primaryA),var(--primaryB));color:#fff;font-weight:900;letter-spacing:.2px;cursor:pointer;box-shadow:0 6px 18px rgba(221,36,118,.35);transition:transform .12s ease, filter .2s
}
.btn-primary:hover{transform:translateY(-2px);filter:brightness(1.03)}
.btn-primary .arrow{filter:brightness(1.2)}
.foot{margin-top:auto;text-align:center;color:var(--muted);padding-top:14px}

/* ตอบสนองจอเล็ก */
@media (max-width:1080px){
  .login-card{grid-template-columns:1fr}
  .hero-art{display:none}
}
