/* ==============
   SPEECH BUBBLE
   ============== */
.speech-box{
  position:relative;
  max-width:min(540px, 90%);
  padding:16px 18px;
  border-radius:16px;
  background: rgba(255,255,255,.18);
  backdrop-filter: blur(4px) saturate(120%);
  box-shadow: 0 6px 18px rgba(0,0,0,.12) inset, 0 1px 0 rgba(255,255,255,.5);
  color:#fff;
}
.speech-box::after{
  /* หางกล่องคำพูด ชี้ไปทางรูปด้านขวา */
  content:""; position:absolute; right:-14px; top:38px;
  width:16px; height:16px; transform:rotate(45deg);
  background:inherit; border-radius:3px;
  box-shadow: 0 1px 0 rgba(255,255,255,.5);
}
