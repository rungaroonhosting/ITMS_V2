@media (max-width: 768px){  .hero-pane .mock-card{ width: min(440px, 94%); } }

/* =========================
   RIGHT (FORM) — เก็บระเบียบ
   ========================= */

/* อินพุตทรงแคปซูลมาตรฐานเดียวกัน */
.form-pane .field{ display:grid; gap:6px; margin-bottom:14px; }
.form-pane .field .input{
  width:100%; padding:12px 16px;
  border:1px solid #e5e7eb; border-radius:999px;
  background:#fff; outline:none;
  transition: border .15s, box-shadow .15s;
}
.form-pane .field .input:focus{
  border-color:#ec4899; box-shadow:0 0 0 3px rgba(236,72,153,.25);
}
.form-pane .error-text{ color:#ef4444; font-size:.85rem; }

/* ปุ่ม "ตา" โชว์/ซ่อนรหัสผ่าน ให้อยู่ระดับเดียวกับ input เสมอ */
.form-pane .pass-wrap{ position: relative; }
.form-pane .pass-wrap .eye{
  position:absolute; right:12px; top:50%;
  transform: translateY(-50%);
  border:0; background:transparent; cursor:pointer;
  opacity:.65;
}
.form-pane .pass-wrap .eye:hover{ opacity:1; }

/* แถว "จดจำการเข้าสู่ระบบ | ลืมรหัสผ่าน?" ให้ตรงบรรทัด */
.form-pane .form-row{
  display:flex; align-items:center; justify-content:space-between;
  gap:12px; margin: 10px 0 18px;
  font-size:.95rem;
}
/* ป้องกัน checkbox ถูกสไตล์แบบ input capsule */
.form-pane input[type="checkbox"]{
  appearance: auto; -webkit-appearance: auto;
  width:16px; height:16px; margin:0;
  border:1px solid #cbd5e1; border-radius:4px;
  box-shadow:none; background:transparent; padding:0;
}
.form-pane .remember{ display:inline-flex; align-items:center; gap:8px; }

/* ลบแท่งรี ๆ ที่เผลอโผล่เหนือแถวจำฉัน */
.form-pane .thin-sep{ display:none; }

/* ปุ่มเข้าสู่ระบบ: gradient โทนเดียวกับพื้นหลัง + เงาและแสงวิ่ง */
.form-pane .btn-primary{
  position:relative;
  display:inline-flex; align-items:center; justify-content:center;
  width:100%; padding:12px 16px;
  border:0; border-radius:999px; font-weight:800; color:#fff;
  background:linear-gradient(90deg,#fb923c 0%, #ec4899 50%, #8b5cf6 100%);
  box-shadow:0 10px 18px rgba(139,92,246,.20);
  transition: transform .06s, box-shadow .15s, opacity .15s;
}
.form-pane .btn-primary:hover{ opacity:.96; box-shadow:0 14px 26px rgba(139,92,246,.28); }
.form-pane .btn-primary:active{ transform:translateY(1px); }
.form-pane .btn-primary::after{
  content:""; position:absolute; inset:0; border-radius:inherit; pointer-events:none;
  background:linear-gradient(90deg,rgba(255,255,255,.18),rgba(255,255,255,0) 45%,rgba(255,255,255,.18) 60%,rgba(255,255,255,0));
  transform:translateX(-120%); transition:transform .6s ease;
}
.form-pane .btn-primary:hover::after{ transform:translateX(120%); }

/* ส่วน “ยังไม่ได้ลงทะเบียน…?” ให้เหมือนตัวอย่างภาพที่ 2 */
.form-pane .meta{ margin-top:18px; }
.form-pane .meta .sep{ height:1px; background:#e5e7eb; margin:16px 0; }
.form-pane .muted{ color:#6b7280; }
.form-pane .center{ text-align:center; }
.form-pane .register{
  display:flex; justify-content:center; align-items:center;
  gap:14px; margin-top:6px; color:#374151;
}
.form-pane .register .link{ display:inline-flex; align-items:center; gap:6px; text-decoration:none; }
.form-pane .register .link:hover{ text-decoration:underline; }
.form-pane .register .dot{ opacity:.45; }

/* =======================
   HERO LEFT — เพิ่มคอนทราสต์ข้อความ + จัดรูป
   ======================= */

/* ดาร์กโอเวอร์เลย์ใส ๆ ช่วยให้ตัวหนังสืออ่านชัด */
.hero-pane.hero-contrast { position: relative; }
.hero-pane.hero-contrast::before{
  content:""; position:absolute; inset:0; border-radius:20px 0 0 20px;
  /* โทนเข้มบาง ๆ คลุมพื้นหลังเดิม */
  background:
    radial-gradient(60% 60% at 40% 35%, rgba(0,0,0,.28), rgba(0,0,0,0) 70%),
    linear-gradient(140deg, rgba(0,0,0,.18), rgba(0,0,0,.08));
  pointer-events:none;
}
.hero-pane .hero-inner{ position:relative; z-index:1; }

/* ทำให้ข้อความอ่านง่ายขึ้น */
.hero-title{ color:#fff; text-shadow:0 2px 8px rgba(0,0,0,.35); }
.hero-sub, .hero-tag{ color:#f3f4f6; text-shadow:0 1px 4px rgba(0,0,0,.28); }

/* จัด mockup: ไม่มีกรอบ/เงา, ขนาดพอดี */
.hero-pane .mock-card{
  width:min(520px, 92%);
  margin: clamp(12px,2vw,18px) auto 8px;
  background: transparent; border:0; border-radius:0; box-shadow:none; overflow:hidden;
}
.hero-pane .mock-card img{
  display:block; width:100%; height:auto; object-fit:contain; object-position: center;
}
@media (max-width:1024px){ .hero-pane .mock-card{ width:min(480px, 92%); } }
@media (max-width:768px){ .hero-pane .mock-card{ width:min(440px, 94%); } }

