/* ======================
   HERO LAYOUT & BACKDROP
   ====================== */
.hero-pane.hero-right .hero-inner{
  display:flex; flex-direction:column; gap:18px;
  align-items:flex-start;              /* ตัวหนังสือชิดซ้าย */
  justify-content:space-between;
  min-height:100%;
  padding-inline: clamp(16px,2.4vw,28px);
}

/* พื้นหลังฝั่งซ้าย: ไล่สีใสโทนเดียวกับ bg + vignette เบา ๆ */
.hero-pane.hero-contrast.hero-right{
  position:relative; border-radius:20px 0 0 20px; overflow:hidden;
  background:
    radial-gradient(120% 100% at 0% 0%, rgba(255,255,255,.18) 0%, rgba(255,255,255,.06) 55%, rgba(255,255,255,0) 80%),
    linear-gradient(150deg, rgba(251,146,60,.18), rgba(236,72,153,.14) 45%, rgba(139,92,246,.12) 100%);
}
.hero-pane.hero-contrast.hero-right::before{
  content:""; position:absolute; inset:0; pointer-events:none;
  background:
    radial-gradient(90% 70% at 80% 20%, rgba(0,0,0,.18), transparent 70%),
    radial-gradient(120% 120% at 10% 90%, rgba(0,0,0,.10), transparent 70%);
  mix-blend-mode:soft-light;
}

/* รูป mockup: ชิดขวา, ไม่บิด, ไม่มีขอบ/เงา */
