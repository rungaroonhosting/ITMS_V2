  width:100%; border:1px solid #e5e7eb; border-radius:999px;
  padding:12px 16px; background:#fff; outline:none;
  transition:border .15s, box-shadow .15s;
}
.form-pane .input:focus{ border-color:#A78BFA; box-shadow:0 0 0 3px rgba(167,139,250,.25); }

/* eye button นุ่ม ๆ อยู่กึ่งกลาง */
.form-pane .pass-wrap{ position:relative; }
.form-pane .pass-wrap .input{ padding-right:56px; }
.form-pane .eye.soft{
  position:absolute; right:10px; top:50%; transform:translateY(-50%);
  width:34px; height:34px; border:0; border-radius:12px;
  display:grid; place-items:center; cursor:pointer;
  background: radial-gradient(60% 60% at 50% 40%, rgba(0,0,0,.04), transparent),
             rgba(255,255,255,.9);
  box-shadow:0 4px 14px rgba(0,0,0,.12), 0 0 0 1px rgba(0,0,0,.05) inset;
  opacity:.92;
}
.form-pane .eye.soft:hover{ opacity:1; }

/* remember + forgot บรรทัดเดียว */
.form-pane .form-row{
  display:flex; align-items:center; justify-content:space-between;
  gap:12px; margin: 8px 0 18px; font-size:.95rem;
}
.form-pane .remember{ display:inline-flex; gap:8px; align-items:center; color:#374151; }
.form-pane .link{ color:#374151; text-decoration:none; }
.form-pane .link:hover{ text-decoration:underline; }
.form-pane input[type="checkbox"]{
  appearance:auto; -webkit-appearance:auto; width:16px; height:16px; margin:0;
  border:1px solid #cbd5e1; border-radius:4px;
}

/* ปุ่มไล่สี + เงา + ความกว้างเต็ม ตามภาพ */
.form-pane .btn-primary.wide{
  width:100%; border:0; border-radius:999px; padding:12px 16px;
  color:#fff; font-weight:900;
  background:linear-gradient(90deg, #FB923C 0%, #EC4899 50%, #8B5CF6 100%);
  box-shadow:0 10px 18px rgba(139,92,246,.20), 0 2px 0 rgba(255,255,255,.6) inset;
  transition: transform .06s, box-shadow .15s, opacity .15s;
}
.form-pane .btn-primary.wide:hover{
  opacity:.96; box-shadow:0 14px 26px rgba(139,92,246,.28), 0 2px 0 rgba(255,255,255,.7) inset;
}
.form-pane .btn-primary.wide:active{ transform: translateY(1px); }

/* เส้นคั่น + เครดิตล่าง */
.form-pane .meta{ margin-top:18px; }
.form-pane .sep{ height:1px; background:#e5e7eb; margin:16px 0; }
.form-pane .foot{ text-align:center; color:#6b7280; font-size:.92rem; }
.form-pane .foot .dot{ margin:0 .6rem; opacity:.45; }
.form-pane .foot em{ font-style:italic; }

.login-container {
    display: flex;
    width: 100%;
    height: 100vh;
    background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 40%, #fbc2eb 100%);
}

/* ฝั่งซ้าย */
/* ===== HERO (LEFT) – soft gradient full pane, no inner white card ===== */
.hero-pane.is-soft{
  /* ซ้อน white-overlay จาง ๆ ทับ gradient ให้พาสเทล */
  background-image:
    linear-gradient(0deg, rgba(255,255,255,.62), rgba(255,255,255,.62)),
    linear-gradient(135deg, #ff8fa3 0%, #f472b6 45%, #8b5cf6 100%);
  background-size: cover;
  background-position: center;
  border: 0 !important;
  box-shadow: none !important;
}

.hero-pane.is-soft .hero-inner{
  /* สองคอลัมน์: ข้อความ | มาสคอต */
  display: grid;
  grid-template-columns: 1.15fr .85fr;
  align-items: center;
  gap: clamp(16px,2.2vw,28px);
  padding: clamp(28px,3.4vw,40px) clamp(30px,4vw,48px);
  background: transparent !important;  /* กันสไตล์เก่า ๆ ที่เป็นกล่องขาว */
  border: 0 !important;
  box-shadow: none !important;
}

/* ข้อความ */
.hero-title{
  margin: 0 0 8px;
  font-size: clamp(36px,4.8vw,56px);
  line-height: 1.08;
  font-weight: 900;
  color: #6D28D9;
  letter-spacing: .3px;
}
.hero-title .accent{ color:#7C3AED; }

.hero-sub{
  margin: 0 0 6px;
  font-weight: 600;
  color:#5B21B6;
  opacity:.95;
}

/* Tagline เป็น "บรรทัดเดียว" */
.hero-tag{
  margin:0;
  font-weight: 800;
  letter-spacing:.9px;
  color:#6D28D9;
  white-space: nowrap;          /* สำคัญ: บรรทัดเดียว */
  text-transform: uppercase;
  text-shadow: 0 1px 0 rgba(255,255,255,.55);
}

/* รูปชิดขวา ไม่ทับข้อความ */
.hero-art{ justify-self:end; }
.hero-art img{
  width: clamp(240px, 30vw, 360px);
  max-height: min(54vh, 520px);
  height:auto;
  object-fit: contain;
}

/* จอเล็ก: สลับเป็นคอลัมน์เดียว และยอมให้ tagline ตัดบรรทัด */
@media (max-width: 1024px){
  .hero-pane.is-soft .hero-inner{ grid-template-columns: 1fr; }
  .hero-art{ justify-self:center; }
  .hero-tag{ white-space: normal; }
}

